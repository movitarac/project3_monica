<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd
http://www.springframeworkd.org/schema/security
http://www.springframework.org/schema/security/spring-security.xsd">


    <!-- enable use expression -->
    <http auto-config="true" use-expressions="true">
        <intercept-url pattern="/library/login*" access="permitAll" />
        <intercept-url pattern="/library/registration" access="permitAll" />
        <intercept-url pattern="/library/**" access="isAuthenticated()" />
        <form-login login-page="member/login"
                    default-target-url="/library/welcome"
                    authentication-failure-url="/library/login?error"
                    username-parameter="username"
                    password-parameter="password"
                    />
        <logout logout-success-url="member/login?logout" />
        <!-- enabled csrf protection -->
    </http>

<authentication-manager>
   <authentication-provider>
       <jdbc-user-service data-source-ref="dataSource"
                          users-by-username-query=
                                  "select * from user where username=? and password=?"
       authorities-by-username-query="select username, 'default' from user where username=? and password=?"/>

   </authentication-provider>
</authentication-manager>
</beans:beans>