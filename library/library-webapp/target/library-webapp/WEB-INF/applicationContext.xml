<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:ws="http://jax-ws.dev.java.net/spring/core"
       xmlns:wss="http://jax-ws.dev.java.net/spring/servlet"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://jax-ws.dev.java.net/spring/core
        http://jax-ws.dev.java.net/spring/core.xsd
        http://jax-ws.dev.java.net/spring/servlet
        http://jax-ws.dev.java.net/spring/servlet.xsd">

    <wss:binding url="/ws">
        <wss:service>
            <ws:service bean="#workWs"/>
            <ws:service bean="#bookWs"/>
            <ws:service bean="#memberWs"/>
            <ws:service bean="#borrowingWs"/>
        </wss:service>
    </wss:binding>

    <!-- Web service methods -->
    <bean id="workWs" class="com.racic.lib.webservice.endpoint.WorkWs">
        <property name="workService" ref="workService" />
    </bean>
    <bean id="bookWs" class="com.racic.lib.webservice.endpoint.BookWs">
        <property name="bookService" ref="bookService" />
    </bean>
    <bean id="memberWs" class="com.racic.lib.webservice.endpoint.MemberWs">
        <property name="memberService" ref="memberService" />
    </bean>
    <bean id="borrowingWs" class="com.racic.lib.webservice.endpoint.BorrowingWs">
        <property name="borrowingService" ref="borrowingService" />
    </bean>


    <bean id="borrowingService" class="com.racic.lib.business.service.impl.BorrowingServiceImpl"/>
    <bean id="memberService" class="com.racic.lib.business.service.impl.MemberServiceImpl"/>
    <bean id="bookService" class="com.racic.lib.business.service.impl.BookServiceImpl"/>
    <bean id="workService" class="com.racic.lib.business.service.impl.WorkServiceImpl"/>

</beans>